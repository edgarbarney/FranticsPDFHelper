	<Grid x:Name="mainGrid" Background="#333">
		<Canvas x:Name="mainCanvas">
			<Image x:Name="mainPaper" Panel.ZIndex="-100"/>
			<Rectangle x:Name="dragRectangle" IsHitTestVisible="False" Panel.ZIndex="-50" VerticalAlignment="Center"/>
		</Canvas>
		<Button x:Name="closeButton" Click="CloseMainWindowButton_Click" FontFamily="ArialBlack" FontSize="100" VerticalAlignment="Top" HorizontalAlignment="Right" Height="128" Width="128">
			<Image Source="{StaticResource CloseButtonIcon}" Width="64" Height="64"/>
		</Button>
		<Button x:Name="previousPageButton" Click="PreviousPageButton_Click" FontFamily="ArialBlack" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Left" Height="128" Width="128">
			<Image Source="{StaticResource PreviousPageButtonIcon}" Width="64" Height="64"/>
		</Button>
		<Button x:Name="nextPageButton" Click="NextPageButton_Click" FontFamily="ArialBlack" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Right" Height="128" Width="128">
			<Image Source="{StaticResource NextPageButtonIcon}" Width="64" Height="64"/>
		</Button>
		<Button x:Name="cutModeButton" Click="CutModeButton_Click" FontFamily="ArialBlack" FontSize="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="128" Width="128">
			<Image Source="{StaticResource CutModeButtonIcon}" Width="64" Height="64"/>
		</Button>
		<Button x:Name="cutCompleteButton" Click="CutCompleteButton_Click" FontFamily="ArialBlack" FontSize="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="128" Width="128" Margin="133,0,0,0">
			<Image Source="{StaticResource CutCompleteButtonIcon}" Width="64" Height="64"/>    
		</Button>
		<Button x:Name="pageNumberButton" Content="888/888" Click="PageNumberButton_Click" FontFamily="ArialBlack" FontSize="34" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="128" Width="128" Margin="0,0,0,0"/>
	</Grid>
</Window>
